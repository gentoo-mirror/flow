[Unit]
Description=openHAB - empowering the smart home
Documentation=https://www.openhab.org/docs/
Documentation=https://community.openhab.org
Wants=network-online.target
After=network-online.target

[Service]
EnvironmentFile=/etc/env.d/openhab
EnvironmentFile=-/etc/default/openhab

User=openhab

WorkingDirectory=/usr/share/openhab
ExecStart=openhab ${OPENHAB_STARTMODE}
ExecStop=openhab stop

SuccessExitStatus=0 143
RestartSec=5
Restart=on-failure
TimeoutStopSec=120

LimitNOFILE=102642

[Install]
WantedBy=multi-user.target
